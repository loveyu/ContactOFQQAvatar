<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:paddingTop="2dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextQQNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/buttonAddQQEmail"
        android:ems="10"
        android:hint="@string/input_qq_number"
        android:inputType="numberSigned">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonAddQQEmail"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextQQNumber"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/add_qq_email" />

</RelativeLayout>